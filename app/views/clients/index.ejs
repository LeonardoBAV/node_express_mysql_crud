<%- include('../layout/header'); -%>
<div class="card">
	<div class="card-header">
		Clientes
	</div>
	<div class="card-body">
		<a href="clients/create" class="btn btn-primary mb-3">Criar Cliente</a>
		<table class="table table-striped table-bordered table-hover">
			<thead class="thead-dark">
				<tr>
					<th>Id</th>
					<th>Nome</th>
					<th>Cpf</th>
					<th>Email</th>
					<th>Idade</th>
					<th class="text-right">Ação</th>
				</tr>
			</thead>
			<tbody>
				<% if(clients.length > 0) { %>
				<% for(var i = 0; i < clients.length; i++) { %>
				<tr>
					<td class="align-middle"><%=clients[i].id%></td>
					<td class="align-middle"><%=clients[i].name%></td>
					<td class="align-middle"><%=clients[i].cpf%></td>
					<td class="align-middle"><%=clients[i].email%></td>
					<td class="align-middle"><%=clients[i].age%></td>
					<td class="text-right align-middle">
						<form action="/clients/destroy/<%=clients[i].id%>" method="POST">
							<div class="btn-group" role="group" aria-label="Basic example">
								<a href="/clients/edit/<%=clients[i].id%>" class="btn btn-info">Editar</a>
								<button type="submit" class="btn btn-danger">Excluir</button>
							</div>
						</form>
					</td>
				</tr>
				<% } %>
				<% } %>
			</tbody>
		</table>

	</div>
</div>
<%- include('../layout/footer'); -%>